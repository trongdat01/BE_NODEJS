<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>User Management System</title>
</head>

<body>
    <h1>User Management System</h1>

    <div class="container">
        <!-- Create/Edit User Form -->
        <div class="form-container">
            <h2>
                <%= typeof editUser !=='undefined' ? 'Edit User' : 'Add New User' %>
            </h2>
            <form action="<%= typeof editUser !== 'undefined' ? `/users/update/${editUser.id}` : '/users' %>"
                method="POST">
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="firstName"
                        value="<%= typeof editUser !== 'undefined' ? editUser.firstName : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="lastName"
                        value="<%= typeof editUser !== 'undefined' ? editUser.lastName : '' %>" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email"
                        value="<%= typeof editUser !== 'undefined' ? editUser.email : '' %>" required>
                </div>
                <button type="submit" class="btn btn-primary">
                    <%= typeof editUser !=='undefined' ? 'Update User' : 'Add User' %>
                </button>
                <% if(typeof editUser !=='undefined' ) { %>
                    <a href="/" class="btn btn-secondary">Cancel</a>
                    <% } %>
            </form>
        </div>

        <!-- User List -->
        <div class="users-container">
            <h2>Users List</h2>
            <% if (typeof users !=='undefined' && users.length> 0) { %>
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.firstName %>
                                </td>
                                <td>
                                    <%= user.lastName %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td class="actions">
                                    <a href="/users/edit/<%= user.id %>" class="btn btn-edit">Edit</a>
                                    <form action="/users/delete/<%= user.id %>" method="POST" class="delete-form">
                                        <button type="submit" class="btn btn-delete"
                                            onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <p>No users found</p>
                    <% } %>
        </div>
    </div>

    <div class="image-container">
        <img class="datpham" src="/images/lambo.jpg" alt="Lamborghini">
    </div>
</body>

</html>